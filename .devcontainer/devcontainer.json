{
  "name": "Malawi EMR API Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--network=host"],
  "customizations": {
    "vscode": {
      "extensions": [
        "castwide.solargraph",
        "misogi.ruby-rubocop",
        "jnbt.vscode-rufo",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "cweijan.vscode-mysql-client2"
      ]
    }
  },
  "hostRequirements": {
    "memory": "1gb",
    "storage": "1gb",
    "cpus": 2
  },
  "forwardPorts": [3001],
  "postCreateCommand": "bash bin/post_container_setup.sh"
}
